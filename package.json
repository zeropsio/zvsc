{
    "name": "zvsc",
    "displayName": "zVsc",
    "description": "zVsc is a VSCode extension for deploying your code to Zerops",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.60.0"
    },
    "scripts": {
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./"
    },
    "categories": [
        "Other"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "zvsc",
                    "title": "zVsc",
                    "icon": "resources/zerops.svg"
                }
            ]
        },
        "views": {
            "zvsc": [
                {
                    "type": "webview",
                    "id": "zVsc",
                    "name": "zVsc"
                }
            ]
        },
        "configuration": {
            "title": "Zerops",
            "properties": {
                "zvsc.accessToken": {
                    "type": "string",
                    "default": "",
                    "description": "Zerops API Access Token"
                }
            }
        },
        "commands": [
            {
                "command": "zerops.login",
                "title": "Zerops: Login"
            },
            {
                "command": "zerops.logout",
                "title": "Zerops: Logout"
            }
        ]
    },
    "devDependencies": {
        "@types/vscode": "^1.60.0",
        "@types/node": "^14.17.0",
        "typescript": "^4.4.3",
        "node-fetch": "2.6.7",
        "@types/node-fetch": "2.6.4"
    }
}
